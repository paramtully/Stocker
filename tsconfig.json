{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
        "@/*": ["./client/src/*"],
        "@shared/*": ["./shared/*"]
        }
    },
    "include": ["client/src", "server", "shared"]
    }
